generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Manufacturer {
    id Int @default(autoincrement()) @id
    name String @db.VarChar(255)
    equipments Equipment[]
}

model Equipment {
    id Int @default(autoincrement()) @id
    name String @db.VarChar(255)
    manufacturer Manufacturer @relation(fields: [manufacturerId], references: [id])
    manufacturerId Int
    kwh Int
    cout Int
}
